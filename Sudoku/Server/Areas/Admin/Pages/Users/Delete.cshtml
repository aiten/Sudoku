@page "{id:Guid}"
@model Sudoku.Server.Areas.Admin.Pages.Users.DeleteModel

@{
    ViewData["Title"] = "UserDelete";
}

<h1>Delete User</h1>
<h3>Are you sure you want to delete this?</h3>
<hr/>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppUser.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppUser.UserName)
        </dd>
        <dt class="col-sm-2">
            Roles
        </dt>
        <dt class="col-sm-10">
            @await Model.GetUserRolesSummaryAsync(Model.AppUser)
        </dt>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="AppUser.Id"/>
        <input type="submit" value="Delete" class="btn btn-danger"/> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>